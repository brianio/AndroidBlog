<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context="com.brianio.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="My Nanodegree Apps!" />

    <Button
        android:id="@+id/btn_movies"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="POPULAR MOVIES"/>

    <Button
        android:id="@+id/btn_hawk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="STOCK HAWK"/>

    <Button
        android:id="@+id/btn_bigger"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="BUILD IT BIGGER"/>

    <Button
        android:id="@+id/btn_material"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="MAKE YOUR APP MATERIAL"/>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="GO UBIQUITOUS"/>


    <Button
        android:id="@+id/btn_capstone"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="CAPSTONE"/>


</LinearLayout>
